<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EBank.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EBank.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.EBank.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.EBank.Red" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryRed</item>
        <item name="colorPrimaryVariant">@color/primaryRedDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primaryRed</item>
        <item name="colorSecondaryVariant">@color/primaryRedDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/primaryRedDark</item>
        <item name="android:navigationBarColor">@color/primaryRed</item>
    </style>

    <style name="Theme.EBank.Admin" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- TextInputLayout焦点颜色 -->
        <item name="colorSurfaceVariant">@color/purple_500</item>
        <item name="colorOutline">@color/purple_500</item>
        <item name="colorOutlineVariant">@color/purple_500</item>
    </style>

    <style name="Theme.EBank.Admin.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="hintTextColor">@color/purple_500</item>
        <item name="endIconTint">@color/purple_500</item>
        <item name="startIconTint">@color/purple_500</item>
    </style>
</resources>